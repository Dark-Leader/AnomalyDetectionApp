<Window x:Class="EX2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EX2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Width="180" Height="220" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="40 " >
            <ScrollViewer>
                <StackPanel x:Name="sp">
                    <!--this is how we insert the buttons in later from the MainWindow.xaml.cs file - we named the stackPanel sp and used it in the c# file-->
                </StackPanel>
            </ScrollViewer>
        </Grid>


        <Grid x:Name="BottomControls" Width="710" Height="89" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="40,311,0,0">
            <Button x:Name="btnOpen" Content="Open" HorizontalAlignment="Left" Height="50" Margin="0,10,0,0" VerticalAlignment="Top" Width="95" Click="btnOpen_Click"/>
            <Button x:Name="Start" HorizontalAlignment="Left" Height="40" Margin="100,15,0,0" VerticalAlignment="Top" Width="40" Click="btnOpen_Click" RenderTransformOrigin="3.738,0.615">
                <StackPanel>
                    <Image Source="Resources/start.png" Width="40" Height="40"/>
                </StackPanel>
            </Button>

            <Slider x:Name="SliderValue" HorizontalAlignment="Left" Margin="0,65,0,0" VerticalAlignment="Top" Width="710" Height="24" ValueChanged="SliderValue_ValueChanged"/>
            <TextBlock HorizontalAlignment="Left" Height="34" Margin="456,21,0,0" TextWrapping="Wrap" Text="Play speed" VerticalAlignment="Top" Width="102" FontSize="20"/>
            <TextBlock Name="elapsedTime" HorizontalAlignment="Left" Height="34" Margin="563,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="137" FontSize="20" Text="{Binding Time}"/>
        </Grid>



    </Grid>
</Window>
