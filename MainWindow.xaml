<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="EX2.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="850">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <Grid Width="180" Height="220" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="40,40,0,0" >
            <ScrollViewer>
                <StackPanel x:Name="sp">
                    <!--this is how we insert the buttons in later from the MainWindow.xaml.cs file - we named the stackPanel sp and used it in the c# file-->
                </StackPanel>
            </ScrollViewer>
        </Grid>


        <Grid x:Name="BottomControls" Width="809" Height="90" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="23,311,0,0" Grid.ColumnSpan="2">
            <Button x:Name="btnOpenCSV" HorizontalAlignment="Left" Height="50" Margin="0,10,0,0" VerticalAlignment="Top" Width="60" Click="btnOpen_Click">
                <TextBlock Text="Open CSV file" TextWrapping="Wrap" TextAlignment="Center"/>
            </Button>
            <Button x:Name="btnOpenFlightGear" HorizontalAlignment="Left" Height="50" Margin="65,10,0,0" VerticalAlignment="Top" Width="60" Click="btnOpen_Click">
                <TextBlock Text="Open Flight Gear" TextWrapping="Wrap" TextAlignment="Center"/>
            </Button>
            <Button x:Name="Start" HorizontalAlignment="Left" Height="50" Margin="150,10,0,0" VerticalAlignment="Top" Width="50" Click="stackButton_Click" RenderTransformOrigin="3.738,0.615">
                <!--<Image x:Name="startImg" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="40" Source="Resources/play.png"/> -->
            </Button>
            <Button x:Name="Stop" HorizontalAlignment="Left" Height="50" Margin="260,10,0,0" VerticalAlignment="Top" Width="50" Click="stackButton_Click" RenderTransformOrigin="3.738,0.615">
                <!--<Image x:Name="stopimg" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="40" Source="Resources/stop.png" /> -->
            </Button>
            <Button x:Name="Faster" HorizontalAlignment="Left" Height="50" Margin="205,10,0,0" VerticalAlignment="Top" Width="50" Click="stackButton_Click" RenderTransformOrigin="3.738,0.615">
                <!--<Image x:Name="Fasterimg" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="50" Source="Resources/faster.png" Margin="210,15,0,0"/> -->
            </Button>
            <Button x:Name="Fast" HorizontalAlignment="Left" Height="50" Margin="425,10,0,0" VerticalAlignment="Top" Width="50" Click="stackButton_Click" RenderTransformOrigin="3.738,0.615">
                <!--<Image x:Name="Fastimg" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="40" Source="Resources/fast.png" RenderTransformOrigin="0.696,1.152" Margin="435,15,0,0"/> -->
            </Button>
            <Button x:Name="Slow" HorizontalAlignment="Left" Height="50" Margin="370,10,0,0" VerticalAlignment="Top" Width="50" Click="stackButton_Click" RenderTransformOrigin="3.738,0.615">
                <!--<Image x:Name="Slowimg" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="40" Source="Resources/slow.png" RenderTransformOrigin="2.087,1.511" Margin="380,15,0,0"/> -->
            </Button>
            <Button x:Name="Slower" HorizontalAlignment="Left" Height="50" Margin="315,10,0,0" VerticalAlignment="Top" Width="50" Click="stackButton_Click" RenderTransformOrigin="3.738,0.615">
                <!--<Image x:Name="Slowerimg" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="40" Source="Resources/slower.png" RenderTransformOrigin="0.696,1.152" Margin="325,15,0,0"/> -->
            </Button>
            <Slider x:Name="SliderValue" HorizontalAlignment="Left" Margin="0,65,0,0" VerticalAlignment="Top" Width="710" Height="24" ValueChanged="SliderValue_ValueChanged"
                    TickFrequency="1" IsSnapToTickEnabled="True"
                    />
            <TextBlock HorizontalAlignment="Left" Height="34" Margin="525,21,0,0" TextWrapping="Wrap" Text="Play speed" VerticalAlignment="Top" Width="102" FontSize="20"/>
            <TextBlock x:Name="elapsedTime" HorizontalAlignment="Left" Height="34" Margin="699,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" FontSize="20" Text="{Binding Time}"/>
            <TextBlock x:Name="play_speed" HorizontalAlignment="Left" Height="34" Margin="640,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="40" FontSize="20" Text="{Binding Playback_speed}"/>
        </Grid>

        <Grid x:Name="selectedValue" Width="397" Height="220" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="241,40,0,0">

        </Grid>
        <Grid x:Name="correlatedFeature" Width="148" Height="115" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="394,40,0,0"/>
        <Grid x:Name="reg" Width="301" Height="162" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="241,160,0,0"/>


    </Grid>
</Window>